# ============================================================================
# AIS Vessel Tracker - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to git!
# ============================================================================

# ----------------------------------------------------------------------------
# AISStream API Keys (Real-time vessel tracking)
# ----------------------------------------------------------------------------
# Get your free API key at: https://aisstream.io/
# You can use multiple keys for higher rate limits (50 vessels per key)
# Recommended: 6+ keys for tracking 900 vessels simultaneously
AIS_API_KEY_1=your_aisstream_api_key_here
AIS_API_KEY_2=your_aisstream_api_key_here
AIS_API_KEY_3=your_aisstream_api_key_here
AIS_API_KEY_4=your_aisstream_api_key_here
AIS_API_KEY_5=your_aisstream_api_key_here
AIS_API_KEY_6=your_aisstream_api_key_here

# ----------------------------------------------------------------------------
# Datalastic API Key (Atlantic Ocean coverage via REST API)
# ----------------------------------------------------------------------------
# Get API key at: https://www.datalastic.com/
# Optional: Only needed for Atlantic gap coverage between continents
DATALASTIC_API_KEY=your_datalastic_api_key_here

# ----------------------------------------------------------------------------
# Google Gemini API Key (AI-powered company profiling)
# ----------------------------------------------------------------------------
# Get API key at: https://makersuite.google.com/app/apikey
# Optional: Only needed for AI-generated company intelligence
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# SQLite database path (relative to project root)
DB_PATH=data/vessel_static_data.db

# Database connection timeout (seconds)
DB_TIMEOUT=30

# Enable WAL mode for better concurrency
DB_WAL_MODE=true

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file (in addition to console)
LOG_TO_FILE=false

# Log file path (if LOG_TO_FILE=true)
LOG_FILE_PATH=logs/ais_tracker.log

# ----------------------------------------------------------------------------
# Flask Web Server Configuration
# ----------------------------------------------------------------------------
# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
FLASK_HOST=0.0.0.0

# Server port
FLASK_PORT=5000

# Flask environment: development, production
FLASK_ENV=development

# Enable debug mode (never use in production!)
FLASK_DEBUG=true

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_flask_secret_key_here_generate_with_secrets_module

# ----------------------------------------------------------------------------
# WebSocket Configuration
# ----------------------------------------------------------------------------
# AISStream WebSocket endpoint
AISSTREAM_WS_URL=wss://stream.aisstream.io/v0/stream

# WebSocket reconnection delay (seconds)
WS_RECONNECT_DELAY=5

# Maximum reconnection delay (seconds)
WS_MAX_RECONNECT_DELAY=60

# ----------------------------------------------------------------------------
# Vessel Filtering Configuration
# ----------------------------------------------------------------------------
# Minimum vessel length to track (meters)
MIN_VESSEL_LENGTH=100

# Ship type range (70-79: Cargo, 80-89: Tankers)
MIN_SHIP_TYPE=70
MAX_SHIP_TYPE=89

# ----------------------------------------------------------------------------
# Geographic Coverage (Bounding Box)
# ----------------------------------------------------------------------------
# Southwest corner: [latitude, longitude]
BBOX_SW_LAT=25.0
BBOX_SW_LON=-80.0

# Northeast corner: [latitude, longitude]
BBOX_NE_LAT=75.0
BBOX_NE_LON=35.0

# ----------------------------------------------------------------------------
# API Rate Limiting
# ----------------------------------------------------------------------------
# Requests per minute for Datalastic API
DATALASTIC_RATE_LIMIT=60

# Delay between API calls (seconds)
API_CALL_DELAY=1.0

# ----------------------------------------------------------------------------
# Data Collection Intervals
# ----------------------------------------------------------------------------
# Print statistics every N seconds
STATS_INTERVAL=300

# Emissions matcher update interval (seconds)
EMISSIONS_UPDATE_INTERVAL=300

# Econowind score update interval (seconds)
ECONOWIND_UPDATE_INTERVAL=3600

# ----------------------------------------------------------------------------
# File Paths
# ----------------------------------------------------------------------------
# Company cache file
COMPANY_CACHE_PATH=data/company_cache.json

# EU MRV emissions Excel file
EU_MRV_FILE_PATH=data/2024-v99-EU-MRV-emissions.xlsx

# Atlantic tracker stats file
ATLANTIC_STATS_PATH=data/atlantic_tracker_stats.json

# ----------------------------------------------------------------------------
# Optional Features
# ----------------------------------------------------------------------------
# Enable company profiling with AI
ENABLE_AI_PROFILING=false

# Enable web scraping for company data
ENABLE_WEB_SCRAPING=false

# Enable Atlantic Ocean polling
ENABLE_ATLANTIC_TRACKER=false

# Enable emissions matching
ENABLE_EMISSIONS_MATCHER=false

# Enable Econowind score calculation
ENABLE_ECONOWIND_SCORING=false

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------
# Enable test mode (uses smaller datasets)
TEST_MODE=false

# Maximum vessels to track in test mode
TEST_MAX_VESSELS=50

# Mock API responses (for testing without API keys)
MOCK_API_RESPONSES=false

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------
# Database connection pool size
DB_POOL_SIZE=5

# Maximum concurrent WebSocket connections
MAX_WS_CONNECTIONS=18

# HTTP request timeout (seconds)
HTTP_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# Retry backoff multiplier
RETRY_BACKOFF=0.1

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
# Enable CORS (Cross-Origin Resource Sharing)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,https://gerritsxd.com

# Enable rate limiting for API endpoints
ENABLE_RATE_LIMITING=true

# Rate limit: requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Setup Instructions
# ============================================================================
#
# 1. Copy this file:
#    cp .env.example .env
#
# 2. Fill in your API keys:
#    - AISStream: https://aisstream.io/
#    - Datalastic: https://www.datalastic.com/
#    - Google Gemini: https://makersuite.google.com/app/apikey
#
# 3. Generate Flask secret key:
#    python -c "import secrets; print(secrets.token_hex(32))"
#
# 4. Adjust configuration values as needed
#
# 5. NEVER commit .env to git:
#    - .env is already in .gitignore
#    - Only commit .env.example
#
# ============================================================================
